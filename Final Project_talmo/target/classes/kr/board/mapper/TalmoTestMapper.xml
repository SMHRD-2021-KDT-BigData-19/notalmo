<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.board.mapper.TalmoTestMapper">
    <!-- 탈모진단 결과 등록 -->
    <insert id="TalmoResult" parameterType="kr.board.entity.TalmoResultDTO" keyProperty="result_id" useGeneratedKeys="true">
        INSERT INTO result (user_id, result) VALUES (#{user_id}, #{result})
    </insert>
    
    <!-- 탈모진단 이미지 등록 -->
	<insert id="TestImgUpload" parameterType="kr.board.entity.TestImageDTO">
	    insert into pictures (result_id,folder,file_name) values(#{result_id}, #{folder}, #{file_name})
	</insert>
	
	<!-- 탈모진단 리스트 모두 가져오기 -->
	<select id="MyTestGetList" parameterType="int" resultType="kr.board.entity.TestListGetDTO">
        SELECT result.result_id,result.user_id,result.result,result.create_date,pictures.picture_id,pictures.folder,pictures.file_name
		FROM result
		JOIN pictures ON result.result_id = pictures.result_id
		WHERE result.user_id = #{user_id}
		ORDER BY result.create_date DESC
    </select>
</mapper>